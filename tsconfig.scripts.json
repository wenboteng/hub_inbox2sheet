{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/scripts/**/*",
    "src/crawlers/**/*",
    "src/utils/**/*",
    "src/lib/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "src/app/**/*",
    "src/components/**/*",
    "node_modules",
    "dist",
    ".next"
  ]
} 