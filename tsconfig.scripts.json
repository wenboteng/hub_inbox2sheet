{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "src/scripts/**/*.ts",
    "src/utils/**/*.ts",
    "src/lib/**/*.ts",
    "src/crawlers/**/*.ts",
    "src/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "src/app/**/*"
  ]
} 